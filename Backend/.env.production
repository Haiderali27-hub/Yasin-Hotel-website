# Production Environment Variables
NODE_ENV=production
PORT=5000

# Frontend Configuration
FRONTEND_URL=https://your-custom-domain.com
SERVE_STATIC=false

# Database Configuration (Railway provides this)
MONGODB_URI=${{Railway.MONGODB_URL}}

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-this-now
JWT_EXPIRES_IN=7d

# Admin Configuration
ADMIN_EMAIL=admin@hotel.com
ADMIN_PASSWORD=secure-admin-password-123

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100