# Railway Production Environment
NODE_ENV=production
PORT=5000

# Database - Railway will provide this automatically
MONGODB_URI=${{MONGODB_URL}}

# JWT Configuration - CHANGE THESE VALUES!
JWT_SECRET=your-super-secure-jwt-secret-change-this-now-railway-2024
JWT_EXPIRES_IN=7d

# Admin Configuration - CHANGE THESE VALUES!
ADMIN_EMAIL=admin@yourhotel.com
ADMIN_PASSWORD=SecureAdminPass123!

# Frontend URL - Update after frontend deployment
FRONTEND_URL=https://yourhotel.netlify.app

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (Optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password